<Window x:Class="DirectionImpalas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DirectionImpalas"
        mc:Ignorable="d"
        Title="DirectionImpalas" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Stretch" Background="#FFCC2020">
            <Image x:Name="picFace" Grid.Column="0" Grid.Row="0" Source="pics/F face.png" MouseUp="pic1_MouseUp"/>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Stretch" Background="#FF20CC20">
            <CheckBox Content="is there to fight duty concerning ArcticShielding" Background="#FFA09416" BorderBrush="#FFA09416"/>
            <CheckBox Content="knows the BacklogFormula concerning UnicornMappings" Background="#FFA09416" BorderBrush="#FFA09416"/>
            <Button Content="ASSUME_CONTROL"/>
        </StackPanel>
    </Grid>

</Window>
